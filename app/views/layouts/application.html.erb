<!DOCTYPE html>
<html>
  <head>
    <title>Reminder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <% if user_signed_in? %>
          <ul class="navbar-nav mr-auto">
            <li><%= link_to 'プロフィール変更', edit_user_registration_path, class: "nav-link" %></li>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-link" %></li>
          </ul>
        <% else %>
          <ul class="navbar-nav mr-auto">
            <li><%= link_to 'サインアップ', new_user_registration_path, class: "nav-link" %></li>
            <li><%= link_to 'ログイン', new_user_session_path, class: "nav-link" %></li>
          </ul>
        <% end %>
      </nav>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
